{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "esModuleInterop": true,
    "declaration": false,
    "module": "es2020",
    "strictNullChecks": true,
    "moduleResolution": "bundler",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "importHelpers": true,
    "target": "es2022",
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "@pascaliske/ngx-sentry": [
        "dist/ngx-sentry"
      ],
      "@pascaliske/ngx-sentry/*": [
        "dist/ngx-sentry/*"
      ]
    }
  }
}
